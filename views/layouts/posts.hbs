<div class="row">
  <div class="col-md-12">
    <h2>Posts </h2>
    <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Post ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Category</th>
            <th>Published</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each posts}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{postDate}}</td>
              <td><a
                  href="/posts?category={{categoryId}}"
                >{{categoryId}}</a></td>
              <td>{{published}}</td>
              <td><a
                  class="btn btn-danger"
                  href="/posts/delete/{{id}}"
                >remove</a></td>
            </tr>
          {{else}}
            <tr>
              <td colspan="5">{{message}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
